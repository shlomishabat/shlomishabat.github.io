  <script>
    // === ×”×’×“×¨×•×ª ××”×™×¨×•×ª ×œ×©×™× ×•×™ ===
    const EVENT_ISO = '2025-09-25T20:30:00+03:00'; // ×©× ×” ×ª××¨×™×š/×©×¢×” ×›××Ÿ
    const PAYBOX_URL = 'https://payboxapp.page.link/PASTE-YOUR-LINK'; // ×”×“×‘×§ ×›××Ÿ ××ª ×§×™×©×•×¨ ×”â€‘PayBox

    // ×”×¦×’×ª ×§×™×©×•×¨ ×”â€‘PayBox ×‘××§×•××•×ª ×”×©×•× ×™×
    const payLink = document.getElementById('paybox-link');
    const footerPay = document.getElementById('footer-paybox');
    payLink.href = PAYBOX_URL;
    footerPay.href = PAYBOX_URL;

    // ×˜×•×¤×¡ â†’ ×”×¦×’×ª ×”â€‘PayBox
    const form = document.getElementById('rsvp-form');
    const block = document.getElementById('paybox-block');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());
      try {
        localStorage.setItem('birthday-rsvp', JSON.stringify({
          time: new Date().toISOString(),
          ...data
        }));
      } catch {}
      form.style.display = 'none';
      block.style.display = 'block';
      block.setAttribute('aria-hidden', 'false');
    });

    // ×§××•× ×˜×“××•×Ÿ
    function tick() {
      const now = new Date();
      const eventDate = new Date(EVENT_ISO);
      const diff = Math.max(0, eventDate - now);
      const d = Math.floor(diff / (1000 * 60 * 60 * 24));
      const h = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const m = Math.floor((diff / (1000 * 60)) % 60);
      document.getElementById('cd-days').textContent = String(d).padStart(2,'0');
      document.getElementById('cd-hours').textContent = String(h).padStart(2,'0');
      document.getElementById('cd-mins').textContent = String(m).padStart(2,'0');
    }
    tick();
    setInterval(tick, 30_000);
  </script>
